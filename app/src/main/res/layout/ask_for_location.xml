<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_dialog"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:text="@string/please_select_location_whwre_your_want_to_take_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="@dimen/dp_20"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cbCurrentLocation"
                android:text="@string/use_my_current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvSelectLocation"
                android:hint="@string/select_your_location"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/EditTextTheam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btCancel"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="@string/cancel"
                    android:background="@color/grey"
                    style="@style/ButtonTheam"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btOk"
                    android:text="@string/ok"
                    style="@style/ButtonTheam"
                    android:background="@drawable/button_bg"
                    android:textColor="@android:color/white"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>