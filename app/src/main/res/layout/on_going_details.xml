<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView

        android:layout_width="match_parent"
        android:background="#EFEFF5"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="7dp"
                app:cardElevation="@dimen/dp_5"
                app:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:background="#8F9CB2"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUserImage"
                            android:contentDescription="@string/app_name"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:paddingTop="@dimen/dp_8"
                            android:src="@drawable/user"/>


                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stephan"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"/>


                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="1dp"
                                android:id="@+id/llCall"
                                android:gravity="center"
                                android:background="@drawable/rounded_trans_corner">

                                <ImageView
                                    android:layout_margin="@dimen/dp_4"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/new_phone"/>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:padding="1dp"

                                android:id="@+id/llMessage"
                                android:background="@drawable/rounded_trans_corner">

                                <ImageView
                                    android:layout_margin="@dimen/dp_4"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_maii"/>

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_8"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_alignParentTop="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/tvCategoryName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sofa Cleaning Task"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/sp_14"/>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@android:drawable/ic_menu_my_calendar"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/sp_12"
                                        android:text="Booking for"/>
                                    <TextView
                                        android:id="@+id/tvDate"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/sp_12"
                                        android:text="04 Jan, 2019"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/hours"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/sp_12"
                                        android:id="@+id/hours"
                                        android:layout_marginStart="5dp"
                                        android:text="hours"/>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@android:drawable/ic_menu_mylocation"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/sp_12"
                                        android:text="Job Location :"/>



                                </LinearLayout>
                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:textSize="@dimen/sp_10"
                                    android:text=""/>

                                    <TextView
                                        android:id="@+id/tvDec"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Complete Job Description"
                                        android:textSize="@dimen/sp_14"
                                        android:textColor="@color/grey"
                                        android:textStyle="bold"/>

                                            <Button
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="View more"
                                                android:visibility="gone"
                                                android:layout_gravity="end"
                                                android:background="@drawable/btn_round"/>
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tvRating"
                                android:visibility="gone"
                                android:layout_alignParentBottom="true"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Review"
                                android:textSize="@dimen/sp_16"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/grey"
                                android:background="@drawable/corner_black"
                                android:padding="@dimen/dp_8"/>

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                tools:ignore="RtlCompat">



                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/ivComplete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/circle_shape"/>

                        <View android:layout_width="1dp"
                            android:layout_height="150dp"
                            android:background="@color/colorTrack"
                            android:layout_marginStart="10dp">
                        </View>

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp">



                        <Button
                            android:id="@+id/btCompleteTask"
                            android:visibility="visible"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Complete Now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorTrack"
                            android:background="@drawable/corner_black"
                            android:layout_width="120dp"
                            android:layout_height="@dimen/dp_35"/>

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tvComplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/gray"
                            android:text="Task Completed"/>

                        <TextView
                            android:id="@+id/tvCompleteDate"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTrack"
                            android:text="4 jan ,2019,18.00"/>

                       <!-- Add photo-->
                        <LinearLayout
                            android:id="@+id/lytPhoto"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/lytAddPhoto"
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:background="@drawable/bg_dialog"
                                android:padding="@dimen/dp_8"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/ic_plus"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/sp_12"
                                    android:text="Add Photo"/>


                            </LinearLayout>



                            <androidx.cardview.widget.CardView
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                app:cardCornerRadius="8dp"
                                android:elevation="@dimen/dp_5">

                                <ImageView
                                    android:id="@+id/ivIcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/gal"
                                    android:scaleType="fitXY"/>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivStart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/circle_shape"/>

                        <View android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:background="@color/colorTrack"
                            android:layout_marginStart="10dp"/>

                        <ImageView android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/circle_blue"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">


                        <Button
                            android:id="@+id/btStartTask"
                            android:visibility="visible"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Start Now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:background="@drawable/rounded_corner"
                            android:layout_width="120dp"
                            android:layout_height="@dimen/dp_35"/>


                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tvStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/gray"
                            android:text="Task Started"/>

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tvStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTrack"
                            android:text="4 jan ,2019,18.00"/>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/circle_blue"/>


                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/gray"
                            android:text="Booking Confirmed"/>

                        <TextView
                            android:id="@+id/tvBookingDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTrack"
                            android:text="4 jan ,2019,18.00"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</layout>
