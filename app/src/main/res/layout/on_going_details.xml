<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFF5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="7dp"
                app:cardElevation="@dimen/dp_5"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="#8F9CB2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUserImage"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:contentDescription="@string/app_name"
                            android:paddingTop="@dimen/dp_8"
                            android:src="@drawable/user" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"
                            tools:text="Stephan" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llCall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_trans_corner"
                                android:gravity="center"
                                android:padding="1dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_margin="@dimen/dp_4"
                                    android:contentDescription="@null"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/new_phone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"

                                android:background="@drawable/rounded_trans_corner"
                                android:padding="1dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_margin="@dimen/dp_4"
                                    android:contentDescription="@null"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_maii" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:padding="@dimen/dp_8">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvCategoryName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                tools:text="Sofa Cleaning Task" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_3"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:contentDescription="@null"
                                    android:src="@android:drawable/ic_menu_my_calendar" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/booking_for"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tvDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="04 Jan, 2019" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_3"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:contentDescription="@null"
                                    android:src="@drawable/hours" />

                                <TextView
                                    android:id="@+id/hours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/hour_s"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_3"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:contentDescription="@null"
                                    android:src="@android:drawable/ic_menu_mylocation" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/job_location"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text=""
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/sp_10" />

                            <TextView
                                android:id="@+id/tvDec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@string/complete_job_description"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="@drawable/btn_round"
                                android:text="@string/view_more"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/corner_black"
                            android:gravity="center"
                            android:padding="@dimen/dp_8"
                            android:text="@string/review"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                tools:ignore="RtlCompat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivComplete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@drawable/circle_shape" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/colorTrack" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btCompleteTask"
                            android:layout_width="120dp"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/corner_black"
                            android:text="@string/complete_now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorTrack"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvComplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_completed"
                            android:textColor="@color/gray"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvCompleteDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTrack"
                            android:visibility="visible"
                            tools:text="4 jan ,2019,18.00" />

                        <!-- Add photo-->
                        <LinearLayout
                            android:id="@+id/lytPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lytAddPhoto"
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:background="@drawable/bg_dialog"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dp_8">

                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:contentDescription="@null"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/ic_plus" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="@string/add_photo"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:layout_marginStart="@dimen/dp_10"
                                android:elevation="@dimen/dp_5"
                                app:cardCornerRadius="8dp"
                                tools:targetApi="lollipop">

                                <ImageView
                                    android:id="@+id/ivIcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/gal" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivStart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@drawable/circle_shape" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/colorTrack" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@drawable/circle_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btStartTask"
                            android:layout_width="120dp"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/start_now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_started"
                            android:textColor="@color/gray"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTrack"
                            android:visibility="visible"
                            tools:text="4 jan ,2019,18.00" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@drawable/circle_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_confirmed"
                            android:textColor="@color/gray"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvBookingDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTrack"
                            tools:text="4 jan ,2019,18.00" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>